@page

@model HS.EndPoints.RazorPages.ShopUI.Areas.Account.Pages.LoginModel
@{
    Layout = "_Layout";
    ViewBag.Title = "ورود به سایت";

}
<div class="col-md-12">
    <p class="text-center m-t-30 m-b-40">
        <i class="icon-user-following border img-circle font-xxxlg p-20"></i>
    </p>

    <h2 class="text-center m-b-20">ورود به سایت</h2>
    <form id="form" class="m-t-30 m-b-30" role="form" asp-page-handler="Login" method="post">
        <div style="text-align: center;" asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label for="email" class="sr-only">آدرس ایمیل</label>
            <div class="input-group round">
                <span class="input-group-addon">
                    <i class="icon-envelope"></i>
                </span>
                <input id="email" class="form-control ltr text-left" type="email" name="email" required>
            </div><!-- /.input-group -->
        </div><!-- /.form-group -->


        <div class="form-group">
            <label for="password" class="sr-only">کلمه عبور</label>
            <div class="input-group round">
                <span class="input-group-addon">
                    <i class="icon-key"></i>
                </span>
                <input id="password" name="password" class="form-control ltr text-left" type="password" minlength="5" required>
            </div><!-- /.input-group -->
        </div><!-- /.form-group -->
        <p>

        </p>
        <br>
        <button type="submit" class="btn btn-info btn-round btn-block">
            <i class="icon-paper-plane font-lg"></i>
            ورود به سایت
        </button>
    </form>
    <hr class="m-b-30">
    <a asp-page="/Forget" class="btn btn-default btn-round btn-block m-b-10">
        <i class="icon-refresh font-lg"></i>
        بازیابی رمز  عبور
    </a>
    <a asp-page="/Register" class="btn btn-default btn-round btn-block">
        <i class="icon-user-follow font-lg"></i>
        حساب ندارید، ثبت نام کنید!
    </a>
</div>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <recaptcha-script jquery-validation="false" />
    <script src="~/assets/js/pages/login.js"></script>
}

